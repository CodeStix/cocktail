generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite3"
}

model Recipe {
  id          Int                @id @default(autoincrement())
  name        String
  description String
  imageUrl    String?
  themeColor  String
  shown       Boolean            @default(true)
  ingredients RecipeIngredient[]
}

model RecipeIngredient {
  recipe       Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Restrict)
  recipeId     Int
  ingredientId Int

  order  Int
  amount Float

  @@id([recipeId, ingredientId])
}

model Ingredient {
  id              Int                @id @default(autoincrement())
  name            String
  imageUrl        String?
  output          Output?            @relation(fields: [outputId], references: [id], onDelete: SetNull)
  outputId        Int?
  usedInRecipe    RecipeIngredient[]
  remainingAmount Float
  originalAmount  Float              @default(1000)
  inFridge        Boolean
  themeColor      String             @default("blue")
}

model Output {
  id                Int          @id @default(autoincrement())
  index             Int          @unique
  name              String
  usedInIngredients Ingredient[]
  settings          String       @default("{}")
}
